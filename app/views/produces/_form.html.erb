<%= form_with(model: produce, local: true) do |f| %>
  <% if produce.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(produce.errors.count, "error") %> prohibited this produce from being saved:</h2>

      <ul>
      <% produce.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :plant %>
    <%= f.select(:plant_id) do %>
        <% @plants.each do |p| -%>
        <%= content_tag(:option, p.name, value: p.id) %>
        <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <div class="field">
    <%= f.label :units %>
    <%= f.select(:units) do %>
        <option value="lbs"> lbs </option>
    <option value="oz"> oz </option>
    <option value="kg"> kg </option>
    <option value="grams"> grams </option>
    <option value="handful"> handful </option>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
