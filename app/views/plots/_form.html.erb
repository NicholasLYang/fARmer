
<%= form_with(model: plot, local: true) do |f| %>
  <% if plot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plot.errors.count, "error") %> prohibited this plot from being saved:</h2>

      <ul>
      <% plot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <span class="form-label"> Pick what you want to grow! </span>
      <%= f.select(:plant_id) do %>
          <% @plants.each do |p| -%>
              <%= content_tag(:option, p.name, value: p.id) %>
          <% end %>
      <% end %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
